<style>
    /* Basic styling for the custom dropdown */
    .custom-dropdown {
        display: inline-block;
        position: relative;
        background-color: white;
        border-radius: 25px;
        height: 30px;

    }

    .custom-dropdown .dropdown-toggle {
        /* border: 1px solid #ccc; */
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .custom-dropdown .dropdown-toggle .arrow-icon {
        transition: transform 0.2s ease-in-out;
        position: absolute;
        top: 27%;
        right: 20px;
    }

    .custom-dropdown .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 150px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

    .custom-dropdown .dropdown-content a {
        padding: 8px 16px;
        text-decoration: none;
        display: block;
        cursor: pointer;
        text-transform: uppercase;
        font-size: 11px;
    }

    .custom-dropdown .dropdown-content a:hover {
        background-color: #ddd;
    }

    .rotate-down .arrow-icon {
        transform: rotate(180deg);
    }

    /* Styling for the custom input-like box */
    .custom-input-box {
        display: inline-block;
        /* border: 1px solid #ccc; */
        border-radius: 4px;
        padding: 5px 10px;
        /* margin-top: 5px; */
        /* background-color: white; */
        /* width: 150px; */
        overflow: hidden;
    }

    .selected-color span:hover {
        background-color: red;
        /* border-radius: 25px; */
    }

    .selected-color-container {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 12px;

        /* margin-top: 5px; */
        /* border: 1px solid black; */
        /* background: white; */
        border-radius: 25px;
        /* height: 30px; */
    }

    .selected-color {
        /* background-color: #ccc; */
        align-items: center;
        border-radius: 4px;
        padding: 0px 5px;
        margin: 2px;
        display: flex;
        position: relative;
        font-size: 11px;
        font-weight: 300;
        text-transform: uppercase;
    }

    .selected-color-close {
        font-size: 8px;
        cursor: pointer;
        color: black;
        background-color: #ff6666;
        display: block;
        color: white;
        border-radius: 50%;
