<script>
    // JavaScript functions for the custom dropdown
    let isOpen = false;

    function toggleDropdown() {
        isOpen = !isOpen;
        const dropdownContent = document.getElementById('colorOptions');
        dropdownContent.style.display = isOpen ? 'block' : 'none';
        const arrowIcon = document.querySelector('.arrow-icon');
        arrowIcon.classList.toggle('rotate-down', isOpen);
    }

    function selectColor(color) {
        const selectedColorsContainer = document.getElementById('selectedColorContainer');
        const selectedColorsBox = document.getElementById('selectedColors');
        const currentSelectedColors = selectedColorsBox.innerHTML;

        // if (currentSelectedColors === 'Choose Color') {
        //     selectedColorsBox.innerHTML = '';
        // } else {
        //     selectedColorsBox.innerHTML += ', ';
        // }
        // selectedColorsBox.innerHTML += color;

        const selectedColorDiv = document.createElement('div');
        selectedColorDiv.className = 'selected-color';
        selectedColorDiv.innerHTML =
            // `${color}<span class="selected-color-close" onclick="removeColor(this, '${color}')">x</span>`;
            `${color}<span class="selected-color-close" onclick="removeColor(this, '${color}')"><i class="fa-solid fa-xmark"></i>
</span>`;

        // <i class="fa-solid fa-xmark"></i>
        selectedColorsContainer.appendChild(selectedColorDiv);

        const colorOption = document.querySelector(`a[onclick="selectColor('${color}')"]`);
        if (colorOption) {
            colorOption.style.display = 'none';
        }

        toggleDropdown();
    }

    function removeColor(closeButton, color) {
        // Remove the color from the selected colors box
        const selectedColorDiv = closeButton.parentElement;
        selectedColorDiv.remove();

        // Remove the comma before the color
        const selectedColorsBox = document.getElementById('selectedColors');
        selectedColorsBox.innerHTML = selectedColorsBox.innerHTML.replace(', ' + color, '');

        // Show the color back in the dropdown options
        const colorOption = document.querySelector(`a[onclick="selectColor('${color}')"]`);
        if (colorOption) {
            colorOption.style.display = 'block';

        }

